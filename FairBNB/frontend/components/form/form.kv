<Form>:
    id: form
    BoxLayout:
        padding: dp(100)
        spacing: dp(40)
        canvas:
            Rectangle:
                size: self.size
                source: "bg_map.png"
        MDCard:
            pos_hint: {"center_x": 1, "center_y": 0.5}
            elevation: 40
            size_hint: None, None
            size: 500, 300
            BoxLayout:
                id:baax
                orientation: 'vertical'
                padding: dp(50)
                spacing: dp(10)
                size: 500, 300
                size_hint: None, None
                
                BoxLayout:
                    spacing: dp(20)
                    MDTextField:
                        id: field_n
                        size_hint: None, None
                        width: "200dp"
                        hint_text: "Neighborhood"
                        line_color_normal: app.theme_cls.primary_color
                        on_focus:
                            if self.focus:form.menu_n.open()

                    
                BoxLayout:
                    spacing: dp(40)
                    MDTextField:
                        id: field_a
                        size_hint: None, None
                        width: "85dp"
                        #height: "10dp"
                        hint_text: "Age"
                        mode: "rectangle"
                        icon_right: "arrow-down-drop-circle-outline"
                        icon_right_color: app.theme_cls.primary_color
                        on_focus:
                            if self.focus: form.menu_a.open()
                    MDTextField:
                        id: field_i
                        size_hint: None, None
                        width: "120dp"
                        hint_text: "Interests"
                        mode: "rectangle"
                        icon_right: "arrow-down-drop-circle-outline"
                        icon_right_color: app.theme_cls.primary_color
                        on_focus:
                            if self.focus:form.menu_i.open()

                    BoxLayout:
                        spacing: "10dp"
                        pos_hint: {"center_y": 0.6}
                        BoxLayout:
                            orientation: 'vertical'
                            size_hint: None, None
                            pos_hint: {"center_y": 0.2}
                            size: 70, 40
                            MDLabel:
                                text: "Super host"
                                font_style: 'Caption'
                            MDCheckbox:
                                size_hint: None, None
                                size: dp(40), dp(40)
                                pos_hint: {"center_x": 0.45, "center_y": 0}
                                on_active:
                                    form.set_superhost(self.active)
                        BoxLayout:
                            orientation: 'vertical'
                            size_hint: None, None
                            pos_hint: {"center_x":1, "center_y": 0.2}
                            padding: dp(0)
                            spacing: dp(0)
                            size: 70, 40
                            MDLabel:
                                text: "Fair filter"
                                font_style: 'Caption'
                            MDCheckbox:
                                size_hint: None, None
                                size: dp(40), dp(40)
                                pos_hint: {"center_x": 0.35, "center_y": 0}
                                on_active:
                                    form.set_fairfilter(self.active)
                
                BoxLayout:
                    pos_hint: {"center_x": 0.85, "center_y": 0}
                    padding: dp(20)
                    MDFillRoundFlatIconButton:
                        pos_hint: {"center_y": 0}
                        md_bg_color: 1, 0, 0, 0.7
                        size_hint: None, None
                        size: 100,20
                        icon: 'magnify'
                        text: "Search"

        BoxLayout:
            orientation: 'vertical'
            size_hint: None, None
            size: 300, 100
            pos_hint: {"center_y": 0.6}
            spacing: dp(30)
            MDLabel:
                text: "FairBnB"
                text_color: app.theme_cls.primary_color
                font_style: 'H3'
                bold: True
            MDLabel:
                text: "A new way of finding your best neighborhood."
                font_style: 'H5'