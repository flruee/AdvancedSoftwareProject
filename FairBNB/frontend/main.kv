#:include frontend/airbnbmapview.kv
#:include frontend/components/filtering/filterMenu.kv
#:include frontend/components/form/form.kv
#:include frontend/components/compare/compareScreen.kv
#import MDIconButton kivymd.uix.button.MDIconButton
#import MDFlatButton kivymd.uix.button.MDFlatButton
#import MDRaisedButton kivymd.uix.button.MDRaisedButton
#import MDRectangleFlatIconButton kivymd.uix.button.MDRectangleFlatIconButton
#import MDTextField kivymd.textfields.MDTextField

Screen:

    MDToolbar:
        id: toolbar
        pos_hint: {"top": 1}
        elevation: 10
        title: "FairBnb"
        left_action_items: [["menu", lambda x: nav_drawer.set_state("open")], ["filter",lambda x: filter_drawer.set_state("open")]]
        right_action_items: [['magnify', lambda x: app.show_confirmation_dialog()]]

    MDNavigationLayout:
        x: toolbar.height
        size_hint_y: 1.0 - toolbar.height/root.height

        ScreenManager:
            id: screen_manager

            Screen:
                name: "formscreen"
                Form:
                    id: form


            Screen:
                name: "mapscreen"
                on_pre_enter: app.load_results()
                BoxLayout:
                    orientation: 'horizontal'
                    ScrollView:
                        size_hint: 0.3,1
                        MDGridLayout:
                            id: imagelist
                            cols: 1
                            adaptive_height: True
                            padding: dp(4), dp(4)
                            spacing: dp(4)
                    AirbnbMapView:
                        id: mapview
            

            
            Screen:
                name: 'comparescreen'
                on_pre_enter: compareScreen.load_bookmarked()
                on_leave: compareScreen.remove_wishlist_superboxes()
                CompareScreen:
                    id: compareScreen

            Screen:
                name: 'swipescreen'


        MDNavigationDrawer:
            id: nav_drawer

            ContentNavigationDrawer:
                screen_manager: screen_manager
                nav_drawer: nav_drawer

        MDNavigationDrawer:
            enable_swiping: False
            id: filter_drawer
            FilterMenu:
                id: filter_menu

<MagicButton@MagicBehavior+MDIconButton>

<MySwiper@MDSwiperItem>

    RelativeLayout:

        FitImage:
            source: "logo.png"

        MDBoxLayout:
            adaptive_height: True
            spacing: "12dp"

            MagicButton:
                id: icon
                icon: "weather-sunny"
                user_font_size: "56sp"
                opposite_colors: True

            MDLabel:
                text: "MDLabel"
                font_style: "H5"
                size_hint_y: None
                height: self.texture_size[1]
                pos_hint: {"center_y": .5}
                opposite_colors: True


<Content>
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: "120dp"

    MDTextField:
        hint_text: "Address"


<ContentNavigationDrawer>:

    ScrollView:

        MDList:


            OneLineIconListItem:
                text: "Form"
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "formscreen"
                IconLeftWidget:
                    icon: "file-question-outline"


            OneLineIconListItem:
                text: "Swipe"
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "swipescreen"
                IconLeftWidget:
                    icon: "gesture-swipe"


            OneLineIconListItem:
                text: "Wishlist"
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "comparescreen"
                IconLeftWidget:
                    icon: "heart-outline"


            OneLineIconListItem:
                text: "Map"
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "mapscreen"
                IconLeftWidget:
                    icon: "map-outline"

<ContentFilterDrawer>:
    ScrollView:

        MDList:
            RangeSlider:
                id:"price_slider"





