#:include airbnbmapview.kv


ScreenManager:
    id: screen_manager
    MapScreen:
    FormScreen:
    CompareScreen:

<Content>
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: "120dp"

    MDTextField:
        id: text_field
        hint_text: "Address"


<MapScreen>
    name: 'mapscreen'
    BoxLayout:
        orientation: 'vertical'
        MDToolbar:
            title: "Main Menu"
            left_action_items: [["menu", lambda x: app.callback(x)]]
            right_action_items: [['magnify', lambda x: app.search_menu.show_confirmation_dialog()]]
            md_bg_color: app.theme_cls.primary_color
        MDSlider:
            id: listing_count
            min: 0
            max: 10000
            color: app.theme_cls.accent_color
            size_hint: [0.5,0.10]
        AirbnbMapView:


<FormScreen>
    name: 'formscreen'
    BoxLayout:
        Button:
            text: 'Go to Map'
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = 'mapscreen'

<CompareScreen>
    name: 'comparescreen'
    BoxLayout:
        Button:
            text: 'Go to Map'
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current = 'mapscreen'
