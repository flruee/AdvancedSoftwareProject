#:include airbnbmapview.kv

Screen:

    MDToolbar:
        id: toolbar
        pos_hint: {"top": 1}
        elevation: 10
        title: "FairBnb"
        left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]
        right_action_items: [['magnify', lambda x: app.show_confirmation_dialog()]]

    MDNavigationLayout:
        x: toolbar.height
        size_hint_y: 1.0 - toolbar.height/root.height

        ScreenManager:
            id: screen_manager

            Screen:
                name: "mapscreen"
                BoxLayout:
                    orientation: 'vertical'
                    AirbnbMapView:
                        id: mapview

            Screen:
                name: 'formscreen'

            Screen:
                name: 'comparescreen'

            Screen:
                name: 'swipescreen'
                MDSwiper:
                    id: swiper
                    on_swipe: print("on_swipe")
                    on_pre_swipe: print("on_pre_swipe")
                    on_overswipe_right: print("on_overswipe_right")
                    on_overswipe_left: print("on_overswipe_left")
                    on_swipe_left: print("on_swipe_left")
                    on_swipe_right: print("on_swipe_right")
                    size_hint_y: None
                    height: root.height - toolbar.height - dp(40)
                    y: root.height - self.height - toolbar.height - dp(20)

                    MySwiper:

                    MySwiper:

                    MySwiper:

                    MySwiper:

                    MySwiper:

        MDNavigationDrawer:
            id: nav_drawer

            ContentNavigationDrawer:
                screen_manager: screen_manager
                nav_drawer: nav_drawer


<MySwiper@MDSwiperItem>

    FitImage:
        source: "marker.png"
        radius: [20,]


<Content>
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: "120dp"

    MDTextField:
        hint_text: "Address"


<ContentNavigationDrawer>:

    ScrollView:

        MDList:


            OneLineIconListItem:
                text: "Form"
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "formscreen"
                IconLeftWidget:
                    icon: "file-question-outline"


            OneLineIconListItem:
                text: "Swipe"
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "swipescreen"
                IconLeftWidget:
                    icon: "gesture-swipe"


            OneLineIconListItem:
                text: "Wishlist"
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "comparescreen"
                IconLeftWidget:
                    icon: "heart-outline"


            OneLineIconListItem:
                text: "Map"
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "mapscreen"
                IconLeftWidget:
                    icon: "map-outline"








