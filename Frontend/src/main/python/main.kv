#:include airbnbmapview.kv


ScreenManager:
    MapScreen:
    FormScreen:
    CompareScreen:

<Content>
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: "120dp"

    MDTextField:
        id: text_field
        hint_text: "Address"


<MapScreen>
    name: 'map'
    BoxLayout:
        orientation: 'vertical'
        MDToolbar:
            title: "Main Menu"
            left_action_items: [["menu", lambda x: app.callback(x)]]
            right_action_items: [['magnify', lambda x: app.search_menu.show_confirmation_dialog()]]
            md_bg_color: app.theme_cls.primary_color

        AirbnbMapView:


<FormScreen>
    name: 'form'
    BoxLayout:
        Button:
            text: 'Go to Map'
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = 'map'

<CompareScreen>
    name: 'compare'
    BoxLayout:
        Button:
            text: 'Go to Map'
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current = 'map'
