#:include airbnbmapview.kv

Screen:

    MDToolbar:
        id: toolbar
        pos_hint: {"top": 1}
        elevation: 10
        title: "FairBnb"
        left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]
        right_action_items: [['magnify', lambda x: app.show_confirmation_dialog()]]

    MDNavigationLayout:
        x: toolbar.height
        size_hint_y: 1.0 - toolbar.height/root.height

        ScreenManager:
            id: screen_manager

            Screen:
                name: "mapscreen"
                BoxLayout:
                    orientation: 'vertical'
                    AirbnbMapView:

            Screen:
                name: 'formscreen'

            Screen:
                name: 'comparescreen'

        MDNavigationDrawer:
            id: nav_drawer

            ContentNavigationDrawer:
                screen_manager: screen_manager
                nav_drawer: nav_drawer



<Content>
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: "120dp"

    MDTextField:
        hint_text: "Address"


<ContentNavigationDrawer>:

    ScrollView:

        MDList:

            OneLineListItem:
                text: "Map"
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "mapscreen"

            OneLineListItem:
                text: "Form"
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "formscreen"

            OneLineListItem:
                text: "Compare"
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "comparescreen"

